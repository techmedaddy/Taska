generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Reads from .env file
}

model Wallet {
  id        String  @id @default(uuid())
  userId    String  @unique
  balance   Float   @default(0)
  publicKey String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transaction {
  id          String  @id @default(uuid())
  senderId    String
  receiverId  String
  amount      Float
  status      String
  createdAt   DateTime @default(now())
}
