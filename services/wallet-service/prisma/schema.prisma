generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"] // ✅ Added Windows support
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // ✅ Reads from .env file
}

model Wallet {
  id        String  @id @default(uuid())
  userId    String  @unique
  balance   Float   @default(0)
  publicKey String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  sentTransactions    Transaction[] @relation("SenderTransactions", fields: [id], references: [senderId])
  receivedTransactions Transaction[] @relation("ReceiverTransactions", fields: [id], references: [receiverId])
}

model Transaction {
  id          String  @id @default(uuid())
  senderId    String
  receiverId  String
  amount      Float
  status      String
  createdAt   DateTime @default(now())

  // Foreign key relations
  sender   Wallet @relation("SenderTransactions", fields: [senderId], references: [id])
  receiver Wallet @relation("ReceiverTransactions", fields: [receiverId], references: [id])
}
